@model HedgeLinks.Models.ApplicationUser
@inject HedgeLinks.Data.ApplicationDbContext Context

@{
    UserProfile profile = Context.UserProfile.SingleOrDefault(x => x.ApplicationUserId.Equals(Model.Id));
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="@profile.ProfilePicture" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@profile.FirstName @profile.LastName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">DASHBOARD</li>

            <li class="@Html.IsSelected(controller: MainMenu.Dashboard.ControllerName)">
                <a href="@MainMenu.Dashboard.Path">
                    <i class="fa fa-pie-chart"></i> <span>@MainMenu.Dashboard.PageName</span>
                </a>
            </li>


            <li class="header">UI</li>
            <li class="@Html.IsSelected(controller: MainMenu.MenuPath.ControllerName, action: MainMenu.MenuPath.ActionName)">
                <a href="@MainMenu.MenuPath.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.MenuPath.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.Menubar.ControllerName, action: MainMenu.Menubar.ActionName)">
                <a href="@MainMenu.Menubar.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.Menubar.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.Submenu.ControllerName, action: MainMenu.Submenu.ActionName)">
                <a href="@MainMenu.Submenu.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.Submenu.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.TopImage.ControllerName, action: MainMenu.TopImage.ActionName)">
                <a href="@MainMenu.TopImage.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.TopImage.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.ComercialTips.ControllerName, action: MainMenu.ComercialTips.ActionName)">
                <a href="@MainMenu.ComercialTips.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.ComercialTips.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.ArticleTopics.ControllerName, action: MainMenu.ArticleTopics.ActionName)">
                <a href="@MainMenu.ArticleTopics.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.ArticleTopics.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.Articles.ControllerName, action: MainMenu.Articles.ActionName)">
                <a href="@MainMenu.Articles.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.Articles.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.ThirdSection.ControllerName, action: MainMenu.ThirdSection.ActionName)">
                <a href="@MainMenu.ThirdSection.Path">
                    <i class="fa fa-gear"></i> <span>@MainMenu.ThirdSection.PageName</span>
                </a>
            </li>
            <li class="@Html.IsSelected(controller: MainMenu.JobIndustry.ControllerName, action: MainMenu.JobIndustry.ActionName)">
