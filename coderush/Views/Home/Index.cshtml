@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Hedgelinks-home.css" rel="stylesheet" />
<div id="all-index" ng-controller="homeController">

    <section id="top-cover">
        <div class="row" ng-if="topImage">
            <div class="col-md-12 no-padding relative">
                <div class="top-cover-image" style="background-image:url('{{topImage.FilePath}}')" title="HedgeLinks best recruiment system">

                </div>
                <div class="top-image-overlay">

                </div>
                <div class="top-cover-text-container">
                    <p class="top-cover-title" title="{{topImage.ImageTitle}}">{{topImage.ImageTitle}}</p>
                    <p class="top-cover-description" title="{{topImage.ImageTitle}}">{{topImage.ImageSubtitle}}</p>

                </div>
                <div class="top-cover-scroll-btn">

                </div>
            </div>
        </div>
    </section>
    <section id="register-section" class="main-content-container pad-t60 pad-b60">
        <div class="row">
            <div class="col-md-6">
                <div class="info-list">
                    <div class="info-item" ng-repeat="item in commercialTips">
                        <div class="info-first-icon" style="background-image: url({{item.FilePath}});" title="{{item.Keyword}}">
                        </div>
                        <div class="info-text">
                            <h4><b class="theme-color">{{item.Title}}</b> {{item.Subtitle}}</h4>
                        </div>
                    </div>
                   
                </div>
            </div>
            <div class="col-md-5">
                <div class="reg-form-sliding">
                    <p class="registration-title">Search Milions of Jobs</p>
                    <form action="/register/" method="post">
                        <div class="form-label">
                            WHAT YOU DO?
                            <select name="JobIndustry" class="register-select-list">
                                <option value="0">Please Select Your Job Industry</option>
                                <option value="1" ng-repeat="item in jobIndustry">{{item.Title}}</option>
                                
                            </select>
                        </div>
                        <div class="form-label">
                            COMPENSATION
                            <select name="Compensation" class="register-select-list">
                                <option value="0">Please Select Compansation</option>
                                <option value="1" ng-repeat="item in compensation">{{item}}</option>
                                
                            </select>

                        </div>
                        <div class="form-label">
                            DESIRED JOB
                            <input type="text" name="DesiredJob" class="text-input-box" />
                        </div>
                        <div class="form-label">
                            <input class="theme-btn register-btn" type="submit" name="name" value="NEXT" />
                        </div>
                        <div class="register-facebook-btn">
                            <input class="facebook-btn" type="submit" name="name" value="Countinue With Facebook" />
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </section>
